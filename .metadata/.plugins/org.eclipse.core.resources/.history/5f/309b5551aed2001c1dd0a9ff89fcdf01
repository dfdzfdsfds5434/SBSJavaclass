package Java2Class;

class Circle {
	int rad;
	Point center;
	
	public Circle (int x, int y, int r) {
		center = new Point(x,y);
		rad = r;
	}
	public void showCircleInfo() {
		System.out.println("radius:"+rad);
		   center.showPointInfo();
	}
}
class UseCircle{
	public static void main(String[] args) {
		Circle c = new Circle(2,2,4);
		c.showCirclelnfo();
		

	}

}
